{
  "name": "souzaaraujodev/project-order",
  "description": "Order",
  "type": "project",
  "license": "MIT",

  "require": {
    "php": "^8.3",
    "ext-pdo": "*",
    "robmorgan/phinx": "^0.16.10"
  },

  "require-dev": {
    "phpunit/phpunit": "^11.0",
    "friendsofphp/php-cs-fixer": "^3.0",
    "phpstan/phpstan": "^1.11"
  },

  "autoload": {
    "psr-4": {
      "App\\": "src/"
    }
  },

  "autoload-dev": {
    "psr-4": {
      "Tests\\": "tests/"
    }
  },

  "scripts": {
    "test": "phpunit",
    "cs-fix": "php-cs-fixer fix",
    "stan": "phpstan analyse"
  },

  "config": {
    "optimize-autoloader": true,
    "sort-packages": true,
    "platform": {
      "php": "8.3"
    }
  },

  "minimum-stability": "stable",
  "prefer-stable": true
}
